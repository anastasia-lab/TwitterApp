<Window x:Class="TwitInterf.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitInterf"
        mc:Ignorable="d"
        Title="LogIn" Height="176" Width="447">
    <Grid Margin="0,0,0,4">
        <TextBox Name="textBox"  HorizontalAlignment="Left" Height="25" Text="{Binding Path=Verifier, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="34,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="317"/>
        <Button x:Name="buttonOk" IsDefault="True" Content="OK" Click="ButtonOk_Click" HorizontalAlignment="Left" Margin="34,76,0,0" VerticalAlignment="Top" Width="113" Height="33"/>
        <Button x:Name="buttonCancel" IsCancel="True" Content="Cancel" Click="ButtonCancel_Click" HorizontalAlignment="Left" Margin="222,76,0,0" VerticalAlignment="Top" Width="129" Height="33" RenderTransformOrigin="0.51,0.627"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="34,10,0,0" TextWrapping="Wrap" Text="Код доступа" VerticalAlignment="Top" Height="18" Width="150"/>

    </Grid>
</Window>
